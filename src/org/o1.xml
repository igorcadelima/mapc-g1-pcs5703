<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="http://moise.sourceforge.net/xml/os.xsl" type="text/xsl" ?>

<organisational-specification 
    id="o1"
    os-version="0.8"
  
    xmlns='http://moise.sourceforge.net/os'
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:schemaLocation='http://moise.sourceforge.net/os
                        http://moise.sourceforge.net/xml/os.xsd' >
    
<!-- -->
<structural-specification>

<role-definitions>
    <role id="car" />
    <role id="drone" />
    <role id="motorcycle" />
    <role id="truck" />
</role-definitions>

<group-specification id="team">
    <roles>
        <role id="car" min="1" max="1"/>
        <role id="drone" min="1" max="1"/>
        <role id="motorcycle" min="1" max="1"/>
        <role id="truck" min="1" max="1"/>
    </roles>
</group-specification>
</structural-specification>

<functional-specification>
    <scheme id="mapc_sch">
        <goal id="Playing_MAPC">
            <plan operator="parallel">
                <goal id="runTruck"    		ttf="10 minutes" />
                <goal id="runDrone"    		ttf="10 minutes" />
                <goal id="runMotorcycle"    ttf="10 minutes" />
                <goal id="runCar"    		ttf="10 minutes" />
            </plan>
        </goal>

        <mission id="running_truck" min="1" max="1">
            <goal id="runTruck"/>
        </mission>
        
        <mission id="running_drone" min="1" max="1">
            <goal id="runDrone"/>
        </mission>

        <mission id="running_motorcycle" min="1" max="1">
            <goal id="runMotorcycle"/>
        </mission>
        
        <mission id="running_car" min="1" max="1">
            <goal id="runCar"/>
        </mission>        
    </scheme>
</functional-specification>

<normative-specification>
    <norm id="norm1" type="obligation" role="car" mission="running_car"/>
    <norm id="norm2" type="obligation" role="drone" mission="running_drone"/>
    <norm id="norm3" type="obligation" role="motorcycle" mission="running_motorcycle"/>
    <norm id="norm4" type="obligation" role="truck" mission="running_truck"/>
</normative-specification>

</organisational-specification>
